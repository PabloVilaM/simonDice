<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/rojo"
        android:layout_width="206dp"
        android:layout_height="355dp"
        android:layout_marginTop="-11dp"
        android:backgroundTint="#5A0000"
        android:text="Rojo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inicio" />

    <Button
        android:id="@+id/azul"
        android:layout_width="206dp"
        android:layout_height="355dp"
        android:layout_marginTop="-11dp"
        android:backgroundTint="#041E65"
        android:text="Azul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inicio" />

    <Button
        android:id="@+id/verde"
        android:layout_width="206dp"
        android:layout_height="355dp"
        android:layout_marginBottom="-11dp"
        android:backgroundTint="#062B07"
        android:text="Verde"
        app:layout_constraintBottom_toTopOf="@+id/inicio"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/amarillo"
        android:layout_width="206dp"
        android:layout_height="355dp"
        android:layout_marginBottom="-11dp"
        android:backgroundTint="#685E02"
        android:text="Amarillo"
        app:layout_constraintBottom_toTopOf="@+id/inicio"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/inicio"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#000000"
        android:text="Inicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504" />

</androidx.constraintlayout.widget.ConstraintLayout>